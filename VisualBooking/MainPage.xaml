<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisualBooking"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:Microsoft.Xaml.Interactivity" xmlns:Custom1="using:Microsoft.Xaml.Interactions.Core"
    x:Class="VisualBooking.MainPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <local:ViewModel />
    </Page.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,0,0,-658">
            <controls:Expander IsExpanded="True" HorizontalContentAlignment="Stretch" Header="Kontaktoplysninger" Background="#FFFFDAB9" FocusVisualSecondaryBrush="#993E2323" BorderBrush="Orange" >
                <StackPanel Orientation="Vertical" >
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="253*"/>
                            <ColumnDefinition Width="420*"/>
                            <ColumnDefinition Width="773*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Navn:" VerticalAlignment="Center" />

                        <TextBox Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="10,0,0,0" Grid.ColumnSpan="3" Background="White"/>

                    </Grid>
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Telefon:" VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1" Margin="10,0,0,0" Background="White">
                            <ComboBoxItem Content="+45"/>
                            <ComboBoxItem Content="+44"/>
                            <ComboBoxItem Content="+43"/>
                        </ComboBox>

                        <TextBox Text="{Binding PhoneNr, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" TextChanged="TextBox_TextChanged" Background="White"/>

                    </Grid>
                    <Grid/>

                    <Button Margin="2" Content="Næste" HorizontalAlignment="Right" Background="SandyBrown">
                    </Button>

                </StackPanel>
            </controls:Expander>

            <controls:Expander IsExpanded="True" Header="Dato" HorizontalContentAlignment="Stretch" Background="PeachPuff">
                <StackPanel Orientation="Vertical">

                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock VerticalAlignment="Center" Text="Dato:"/>

                        <CalendarDatePicker Date="{Binding Date}" Grid.Column="1" Margin="2" Background="White"/>

                    </Grid>

                    <Button Margin="2" Content="Næste" HorizontalAlignment="Right" Background="SandyBrown"/>

                </StackPanel>

            </controls:Expander>

            <controls:Expander IsExpanded="True" Header="Tidspunkt" HorizontalContentAlignment="Stretch" Background="PeachPuff">

                <StackPanel Orientation="Vertical">
                    <Grid Margin="5" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="2" Background="White">
                            <Button Content="17:00"/>
                            <Button Content="18:00"/>
                            <Button Content="19:00"/>
                            <Button Content="20:00"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="2" Background="White">
                            <Button Content="17:30"/>
                            <Button Content="18:30"/>
                            <Button Content="19:30"/>
                            <Button Content="20:30"/>
                        </StackPanel>



                    </Grid>
                    <Button Margin="2" Content="Næste" HorizontalAlignment="Right" Background="SandyBrown"/>
                </StackPanel>

            </controls:Expander>

            <controls:Expander IsExpanded="True" Header="Bordplan" HorizontalContentAlignment="Stretch" Background="PeachPuff" >
                <StackPanel Orientation="Vertical">
                    <Grid Margin="5" HorizontalAlignment="Left">
                        <Image Source="Assets/Bordplan.png" Margin="4,0,1087,-40"/>
                    </Grid>
                    <Button Margin="2" Content="Næste" HorizontalAlignment="Right" Background="SandyBrown"/>
                        </StackPanel>
            </controls:Expander>


            <controls:Expander IsExpanded="True" Header="Bekræft" HorizontalContentAlignment="Stretch" Background="PeachPuff"/>
            <Button Margin="2" Content="Bekræft" Command="{Binding SaveCommand}"  HorizontalAlignment="Right" Background="SandyBrown"/>

        </StackPanel>

    </Grid>
</Page>
